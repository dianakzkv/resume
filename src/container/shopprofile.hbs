<menu>
   <div>
       <div class="col-12">
            <div class='nav'>
                {{#with navigation}}
                    {{#each links}}
                    <div class='nav-item'>
                        <a href={{href}} class='nav-link  {{#if @last}} disabled{{/if}}'>{{text}}</a>
                    </div>
                    {{/each}}
                {{/with}}
            </div>
        </div>

        <hr class="mt-2 mb-5">

        <div class="col-12">
            <h1 class="mb-4">{{header}}</h1>
            {{#with purchase}}
                <ul class="nav nav-tabs mt-3 mb-4">
                    {{#each tabs}}
                        <li class="nav-item">
                            <a href='#' class="nav-link {{#if @first}}active{{/if}}">{{this}}</a>
                        </li>
                    {{/each}}
                </ul>
                {{#with actionBlock}}
                    <div class="row">
                        <div class="col-4">
                            {{#with input}}
                                <div class="mb-3">
                                    <input class="form-control" placeholder={{placeholder}}>
                                </div>
                            {{/with}}
                        </div>
                        <div class="col-5">
                            {{#each buttons}}
                                <a href={{link}} class='btn {{#if isDanger}}btn-outline-danger{{/if}} {{#if isSuccess}}btn-success{{/if}} {{#if isOutline}}btn-outline-success{{/if}}'>{{text}}</a>
                            {{/each}}
                        </div>
                    </div>
                {{/with}}
            {{/with}}
        </div>

        <hr class="mt-2 mb-4">

        <div class="col-12">
            {{#with purchase}}
            {{#each itemList}}
                <div class="row">
                    <div class="col-4 pt-3">
                        <p>{{number}}</p>
                        <p><b>{{status}}</b></p>
                    </div>
                    <div class="col-2 pt-3">
                        {{#with amount}}
                            <p>{{title}}</p>
                            <p><b>{{value}}</b></p>
                        {{/with}}
                    </div>
                    <div class="col-4">
                        {{#each images}}
                            <img class="rounded" src={{this}}>
                        {{/each}}
                    </div>
                    <div class="col-2 pt-4">
                        {{#with button}}
                            <a class="btn btn-primary" href={{link}}>{{text}}</a>
                        {{/with}}
                    </div>
                </div>
                <hr class="my-1">
            {{/each}}
            {{/with}}
        </div>

        <div class="col-12">
            {{#with userInfo}}
                <h2 class="my-4">{{title}}</h2>

                {{#with profileData}}
                    <div class="card p-3 mt-3">
                        <h4 class="card-title mb-3">{{title}}</h4>
                        <div class="card p-3 mb-3">
                            <div class="row">
                                {{#with fullName}}
                                    {{#with surname}}
                                        <div class="col-4">
                                            <h6 class="card-subtitle mb-2 text-body-secondary">{{title}}</h6>
                                            {{value}}
                                        </div>
                                    {{/with}}
                                    {{#with name}}
                                        <div class="col-4">
                                            <h6 class="card-subtitle mb-2 text-body-secondary">{{title}}</h6>
                                            {{value}}
                                        </div>
                                    {{/with}}
                                    {{#with middleName}}
                                        <div class="col-4">
                                            <h6 class="card-subtitle mb-2 text-body-secondary">{{title}}</h6>
                                            {{value}}
                                        </div>
                                    {{/with}}
                                {{/with}}
                            </div>
                        </div>

                        <div class="card p-3 mb-3">
                            <div class="row">
                                {{#with otherInfo}}
                                    {{#with birthday}}
                                        <div class="col-4">
                                            <h6 class="card-subtitle mb-2 text-body-secondary">{{title}}</h6>
                                            {{value}}
                                        </div>
                                    {{/with}}
                                    {{#with sex}}
                                        <div class="col-4">
                                            <h6 class="card-subtitle mb-2 text-body-secondary">{{title}}</h6>
                                            {{value}}
                                        </div>
                                    {{/with}}
                                    {{#with language}}
                                        <div class="col-4">
                                            <h6 class="card-subtitle mb-2 text-body-secondary">{{title}}</h6>
                                            {{value}}
                                        </div>
                                    {{/with}}
                                {{/with}}
                            </div>
                        </div>
                {{/with}}
                        <div class="card p-3 mb-3">
                            <div class="row">
                                {{#each buttons}}
                                    <div class="col-4"><a href={{link}} class='btn {{#if isDanger}}btn-outline-danger{{/if}} {{#if isPrimary}}btn-primary{{/if}} {{#if isSecondary}}btn-outline-secondary{{/if}}'>{{text}}</a></div>
                                {{/each}}
                            </div>
                        </div>
                    </div>

                {{#with recipients}}
                    <div class="card p-3 mt-3">
                        <h4 class="card-title mb-3">{{title}}</h4>
                        <div class="row">
                            {{#each users}}
                                <div class="col-4">
                                    <div class="card p-3 mb-3">
                                        <h5 class="card-title mb-2 text-body-secondary">{{name}}</h5>
                                        <h6 class="card-subtitle mb-2 text-body-secondary">{{phone}}</h6>
                                        <div class="col-2">
                                            {{#with button}}
                                                <a href={{link}} class='btn btn-primary my-2'>{{text}}</a>
                                            {{/with}}
                                        </div>
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    </div>
                {{/with}}

                {{#with contacts}}
                    <div class="card p-3 mt-3">
                        <h4 class="card-title mb-3">{{title}}</h4>
                        <div class="row">
                            {{#each contactData}}
                                <div class="col-4">
                                    <div class="card p-3 mb-3">
                                        <h5 class="card-subtitle mb-2 text-body-secondary">{{title}}</h5>
                                        <p class="card-text mb-2 text-body-secondary">{{value}}</p>
                                        <div class="col-2">
                                            {{#with button}}
                                                <div class="col-4 mt-2"><a href={{link}} class='btn {{#if isDanger}}btn-outline-danger{{/if}} {{#if isPrimary}}btn-primary{{/if}} {{#if isSecondary}}btn-outline-secondary{{/if}}'>{{text}}</a></div>
                                            {{/with}}
                                        </div>
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    </div>
                {{/with}}

            {{/with}}
        </div>

        <hr class="mt-4 mb-3">

        <div class="col-12">
        <div class='row'>
            {{#each footer}}
                <div class='col-2'>
                    <ul>
                        {{#each this}}
                        <div class="nav">
                            <a
                            href={{link}}
                            class='nav nav-link
                            {{#if @last}}disabled{{/if}}'>{{text}}</a>
                        </div>
                        {{/each}}
                    </ul>
                </div>
            {{/each}}
        </div>
        </div>

   </div>
</menu>