<main>

    <div>
        <div class='nav'>
            {{#with navigation}}
                {{#each links}}
                <div class='nav-item'>
                    <a href='{{href}}' class='nav-link  {{#if @last}} disabled{{/if}}'>{{text}}</a>
                </div>
                {{/each}}
            {{/with}}
        </div>
    </div>

    <hr class="mt-3 mb-5">

    <div>
        {{#with header}}
            <h3 class="mb-4">{{title}}</h3>
            {{#with button}}
                <a href={{link}} class="btn btn-outline-secondary mb-2">{{text}}</a>
            {{/with}}
        {{/with}}
    </div>

    <hr class="my-5">

    <div>
        <div class='row'>
        {{#each goodsBlock}}
            <div class='card col-12 p-3 mb-3'>
            <div class='row'>
                <div class="col-2"><img src={{image}} class="rounded-pill"/></div>
                <div class="col-3">
                    <h5 class="mb-2">{{name}}</h5>
                    <p>{{description}}</p>
                </div>
                <div class="col-2">
                    {{#with price}}
                    <h6 class="my-3">{{title}}</h6>
                    <p><b>{{value}}</b></p>
                    {{/with}}
                </div>
                <div class="col-2">
                    {{amount}}
                </div>
                <div class="col-3">
                    {{#each buttons}}
                    <button class="btn {{#if isPrimary}}btn-primary{{/if}} {{#if isDanger}}btn-outline-danger{{/if}} mb-2">{{text}}</button>
                    <br>
                    {{/each}}
                </div>
            </div>
            </div>
        {{/each}}
        </div>
    </div>

    <hr class="my-5">

    <div>
        {{#with total}}
            <h3 class="mb-3">{{title}}</h3>
            <p class="display-5 mb-3">{{amount}}</p>
            <h5 class="mb-3">{{delivery}}</h5>

            {{#each buttons}}
                <a href={{link}} class="mb-3 btn {{#if isSuccess}}btn-success{{/if}} {{#if isOutline}}btn-outline-success{{/if}}">{{text}}</a>
                <br>
            {{/each}}
        {{/with}}
    </div>

    <hr class="my-5">

    <div class="row">
        {{#with goodsOtherBlock}}
        <h3 class="text-center mb-4">{{title}}</h3>
        {{#each cards}}
            <div class="col-4">
                <div class="card">
                    <img src={{image}} class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">
                            {{title}}
                            {{#if isHot}}
                            <span class="badge rounded-pill text-bg-warning ms-1">HOT</span>
                            {{/if}}
                            {{#if idNew}}
                                <span class="badge rounded-pill text-bg-primary ms-1">New</span>
                            {{/if}}
                        </h5>
                        
                        <p class="card-text">{{description}}</p>
                    </div>
                </div>
            </div>
        {{/each}}
        {{/with}}
    </div>

    <hr class="my-5">

    <div class="row">
        <div class="card text-bg-dark p-3">
            {{#with subscribe}}
                <h2 class="mb-3">{{header}}</h2>
                <p class="mb-4">description</p>
                {{#each buttons}}
                    <div class="col-4">
                        <a href={{link}} class="btn btn-primary mb-3">{{text}}</a>
                    </div>
                {{/each}}
            {{/with}}
        </div>
    </div>

    <hr class="my-5">

    <div class="col-12">
        <div class='row'>
            {{#each footer}}
                <div class='col-2'>
                    <ul>
                        {{#each this}}
                        <div class="nav">
                            <a
                            href={{link}}
                            class='nav nav-link
                            {{#if @last}}disabled{{/if}}'>{{text}}</a>
                        </div>
                        {{/each}}
                    </ul>
                </div>
            {{/each}}
        </div>
    </div>
    
</main>