<main>

  <div class='row'>

    <div class='col-12'>
        <div class='nav'>
        {{#with navigation}}
            {{#each links}}
            <div class='nav-item'>
                <a href='{{href}}' class='nav-link  {{#if @last}} disabled{{/if}}'>{{text}}</a>
            </div>
            {{/each}}
        {{/with}}
        </div>
    </div>
    
    <hr class="mt-3 mb-5">

    <div class="col-12">
        <h1 class="mb-5">{{header}}</h1>

        <div class="row">

            <div class="col-8">
                <div>
                    {{#with contacts_data}}
                        <h3 class="my-2">{{title}}</h3>
                        {{#each buttons}}
                            {{#if isPrimary}}
                            <button class="btn btn-warning text-light my-2">{{text}}</button>
                            {{else}}
                            <button class="btn btn-outline-warning my-2">{{text}}</button>
                            {{/if}}
                        {{/each}}
                        <div class="row mt-2">
                            {{#with form}}
                                {{#with input}}
                                    <div class="col-6 mb-3">
                                        {{#with surname}}
                                            {{> inputShopOrder label=label placeholder=placeholder caption=caption }}
                                        {{/with}}
                                    </div>
                                    <div class="col-6 mb-3">
                                        {{#with name}}
                                            {{> inputShopOrder label=label placeholder=placeholder caption=caption }}
                                        {{/with}}
                                    </div>
                                    <div class="col-6">
                                        {{#with phone}}
                                            {{> inputShopOrder label=label placeholder=placeholder caption=caption }}
                                        {{/with}}
                                    </div>
                                    <div class="col-6">
                                        {{#with email}}
                                            {{> inputShopOrder label=label placeholder=placeholder caption=caption }}
                                        {{/with}}
                                    </div>
                                {{/with}}
                                <hr class="my-4 col-12">
                                <div class="col-8">
                                    {{#each switch}}
                                        <div class="form-check form-switch mb-3">
                                            <input class="form-check-input" type="checkbox" role="switch" {{#if isActive}}checked{{/if}}>
                                            <label class="form-check-label" for="flexSwitchCheckDefault">{{text}}</label>
                                        </div>
                                    {{/each}}
                                </div>
                            {{/with}}
                        </div>
                    {{/with}}
                </div>

                <hr class="my-4 col-12">

                <div>
                    {{#with delivery}}
                        <h3 class="my-2">{{title}}</h3>
                        <div class="row">
                            <div class="card p-3 my-2">
                                <div  class="row">
                                    {{#each select}}
                                        <div class="col-6">
                                            <label class="form-label">{{label}}</label>
                                            <select class="form-select mb-2">
                                                <option selected>{{placeholder}}</option>
                                                {{#each options}}
                                                    <option value={{value}}>{{text}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                        <div class="p-2">
                            {{#each delivery_type}}
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="delivery" {{#if @first}} checked {{/if}}>
                                    <label class="form-check-label">
                                        {{type}}
                                    </label>
                                </div>
                            {{/each}}
                        </div>
                        <hr class="my-4 col-12">
                        {{#with payment}}
                            <h3 class="my-2">{{title}}</h3>
                            <div class="p-2">
                                {{#each list}}
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="radio" name="payment" {{#if @first}} checked {{/if}}>
                                        <label class="form-check-label">
                                            {{type}}
                                        </label>
                                        <div class='form-text'>{{description}}</div>
                                    </div>
                                {{/each}}
                            </div>
                        {{/with}}
                    {{/with}}
                </div>

                <hr class="my-4 col-12">

                <div>
                    {{#with coupon}}
                        <h3 class="my-2">{{title}}</h3>
                        {{#with select}}
                            {{#with availabel_coupon}}
                                <div class="mb-3">
                                    <label class="form-label">{{label}}</label>
                                    <select class="form-select form-select-lg">
                                        <option selected>{{placeholder}}</option>
                                        {{#each options}}
                                            <option value={{value}}>{{text}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            {{/with}}

                            {{#with friend_coupon}}
                                <div class="mb-3">
                                    <label class="form-label">{{label}}</label>
                                    <select class="form-select form-select-sm">
                                        <option selected>{{placeholder}}</option>
                                        {{#each options}}
                                            <option value={{value}}>{{text}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            {{/with}}
                        {{/with}}

                        {{#with add}}
                            {{#with friend}}
                                <div class="mb-3">
                                    <label class="form-label">{{label}}</label>
                                    <input class="form-control form-control-lg" placeholder={{placeholder}}>
                                    <div class='form-text'>{{caption}}</div>
                                </div>
                            {{/with}}

                            {{#with colleague}}
                                <div class="mb-3">
                                    <label class="form-label">{{label}}</label>
                                    <input class="form-control form-control-sm" placeholder={{placeholder}}>
                                    <div class='form-text'>{{caption}}</div>
                                </div>
                            {{/with}}
                        {{/with}}
                    {{/with}}
                </div>

                <hr class="my-4 col-12">

                <div>
                    {{#with quiz}}
                        <h3 class="my-2">{{title}}</h3>

                        {{#with preference}}
                            <div class="p-2">
                                <h6 class="mt-2 mb-3">{{title}}</h6>
                                {{#each options}}
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="radio" name="preference" {{#if @first}} checked {{/if}}>
                                        <label class="form-check-label">
                                            {{this}}
                                        </label>
                                    </div>
                                {{/each}}
                            </div>
                        {{/with}}

                        {{#with your_expirience}}
                            <div class="mb-3">
                                    <label class="form-label">{{label}}</label>
                                    <input class="form-control">
                                </div>
                        {{/with}}

                        {{#with purchase_frequency}}
                            <div class="mb-4">
                                    <label class="form-label">{{label}}</label>
                                    <select class="form-select">
                                        <option selected>{{placeholder}}</option>
                                        {{#each options}}
                                            <option value={{value}}>{{text}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                        {{/with}}

                        {{#with factors}}
                            <h6 class="mt-2 mb-3">{{title}}</h6>
                            <div class="p-2">
                                {{#each options}}
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="checkbox" name="factors" {{#if @first}} checked {{/if}}>
                                        <label class="form-check-label">
                                            {{this}}
                                        </label>
                                    </div>
                                {{/each}}
                            </div>
                        {{/with}}

                    {{/with}}
                </div>

            </div>

            <div class="col-4">
                <div class="card p-2 mb-3">
                    <div class="row">
                        <div class="col-10">
                            {{#each action_block}}
                                <button class="btn {{#if isSuccess}}btn-success mb-2{{/if}} {{#if isDanger}}btn-danger mb-2{{/if}} {{#if isInfo}}btn-info{{/if}}">
                                    {{text}}
                                </button>
                            {{/each}}
                        </div>
                    </div>
                </div>

                <div class="card p-3">
                    {{#with total}}
                        <h3 class="mb-2">{{title}}</h3>

                        {{#each item_list}}
                            {{name}}: {{price}} <br>
                        {{/each}}

                        <hr class="my-2">

                        {{#each additional_info}}
                            {{text}}: {{value}} <br>
                        {{/each}}

                        <hr class="my-2">

                        {{#with total_price}}
                            {{text}}: {{value}}
                        {{/with}}

                        <hr class="my-2">

                        {{#each button}}
                            <button class="btn {{#if isPrimary}}btn-primary my-2{{/if}} {{#if isOutline}}btn-outline-primary{{/if}}">
                                {{text}}
                            </button>
                        {{/each}}
                    {{/with}}
                </div>
            </div>

        </div>

    </div>

    <hr class="my-4 col-12">

    <div class="col-12">
        <div class='row'>
            {{#each footer}}
                <div class='col-2'>
                    <ul>
                        {{#each this}}
                        <div class="nav">
                            <a
                            href={{link}}
                            class='nav nav-link
                            {{#if @last}}disabled{{/if}}'>{{text}}</a>
                        </div>
                        {{/each}}
                    </ul>
                </div>
            {{/each}}
        </div>
    </div>


  </div>

</main>