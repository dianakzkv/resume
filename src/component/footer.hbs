<footer>
    <hr class="my-5">
    <div>
        {{#with social}}
            {{> link text=email.text link=email.link blank=true }}
            {{> link text=phone.text link=phone.link blank=true }}
            {{> link text=linkedin.text link=linkedin.link blank=true noLine=true}}
        {{/with}}
    </div>
    <br />
    <div class="my-2">
        <em>Copyright by {{firstname}} {{lastname}}</em>
    </div>
    <br />
    <div>
        <address>{{address}}</address>
    </div>
</footer>
