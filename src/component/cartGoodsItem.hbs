<div class='row'>
  {{#each goodsBlock}}
    <div class='card col-12 p-3'>
      <div class='row'>
        <div class="col-2"><img src={{image}} /></div>
        <div class="col-3">
            <h5 class="mb-2">{{name}}</h5>
            <p>{{description}}</p>
        </div>
        <div class="col-2">
            {{#with price}}
            <p class="my-3">{{title}}:</p>
            <p><b>{{value}}</b></p>
            {{/price}}
        </div>
        <div class="col-2">
            {{amount}}
        </div>
        <div>
            {{#each buttons}}
             <button class="btn {{#if isPrimary}}btn-primary{{/if}} {{#if isDanger}}btn-outline-danger{{/if}} mb-2">{{text}}</button>
             <br>
            {{/each}}
        </div>
      </div>
    </div>
  {{/each}}
</div>